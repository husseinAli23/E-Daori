<style>
	#favBtn {
		position: absolute;
		outline: transparent;
		border: none;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 100px;
		height: 35px;
		background-color: azure;
		border-radius: 75px;
		line-height: 20px;
		text-align: center;
		font-size: 10px;
		text-decoration: none;
		color: #2e2828;
		transition: 0.5s;
		text-transform: uppercase;


	}

	#favBtn.active {
		background-color: transparent;
		color: transparent;

	}

	#favBtn:before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		background: #e91e63;
		width: 20%;
		height: 40%;
		transition: 0.5s;
		z-index: -1;
		transform: translateX(-200px) rotate(-325deg);
		opacity: 0;

	}

	#favBtn.active:before {
		left: 35.5px;
		transform: translateX(0) rotate(35deg);
		border-top-left-radius: 75px;
		border-bottom-left-radius: 75px;
		opacity: 1;
	}

	#favBtn:after {
		content: "";
		position: absolute;
		top: 0;
		right: 0;
		background: #e91e63;
		width: 20%;
		height: 40%;
		transition: 0.5s;
		z-index: -1;
		transform: translateX(200px) rotate(325deg);
		opacity: 0;

	}

	#favBtn.active:after {
		right: 35.5px;
		transform: translateX(0) rotate(-35deg);
		border-top-right-radius: 75px;
		border-bottom-right-radius: 75px;
		opacity: 1;

	}
</style>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"
	integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous">
	</script>
<div class="main-container">
	<div class="card-team-details">
		<div class="content-team-details">


			<div class="row1">
				<div class="team-details-head">
					<img id="team-details-logo" src="<%=team.response.team.logo %>" alt="Card image cap">

					<h2 class="card-title">
						<%= team.response.team.name %>
					</h2>
					<br />
					<input  hidden="hidden" id="favoriteStatus" value="<%= favorite%>">

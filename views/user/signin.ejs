<section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col-md-6">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3  style="font-weight:800;font-size:70px;" class="card-title sign">Login</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/auth/signin" method="POST" class="form">
              <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" name="emailAddress"  style="color: white;" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" name="password" style="color: white;" class="form-control" id="exampleInputPassword1" placeholder="Password">
                  </div>
                <div class="form-group">
                 <a href="/auth/signup"  class="card-link link">Create a new account?</a>
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn bg-light text-dark">Login</button>
              </div>
            </form>
          </div>

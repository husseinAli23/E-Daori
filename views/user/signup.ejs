 <section class="content">
     <div class="container-fluid">
       <div class="row">
         <!-- left column -->
         <div class="col-md-6">
           <!-- general form elements -->
           <div class="card card-primary">
             <div class="card-header">
               <h3 style="font-weight:800;font-size:45px; text-align:center;" class="card-title sign">Create new account</h3>
             </div>
             <!-- /.card-header -->
             <!-- form start -->
             <form action="/auth/signup" method="POST" class="form" enctype="multipart/form-data">
               <div style="padding:10px" class="card-body">
                 <div class="form-group">
                     <label for="exampleInputName">Username</label>
                     <input  type="text" name="name"  style="color: white;" class="form-control" id="exampleInputName" placeholder="Enter name">
                   </div>
                 <div class="form-group">
                   <label for="exampleInputEmail1">Email address</label>
                   <input type="email" name="emailAddress"  style="color: white;"  class="form-control" id="exampleInputEmail1" placeholder="Enter email">
                 </div>
                 <div class="form-group">
                   <label for="exampleInputPassword1">Password</label>
                   <input type="password" name="password"  style="color: white;" class="form-control" id="exampleInputPassword1" placeholder="Password">
                 </div>
                 <div class="form-group">
                   <label for="profileImage">File input</label>
                   <div class="input-group">
                     <div class="custom-file">
                       <input type="file" class="custom-file-input" id="profileImage" name ="image">
                       <label class="custom-file-label" for="profileImage" >Choose file</label>
                     </div>
                   </div>
                 </div>
               </div>
               <!-- /.card-body -->
               <div class="card-footer ">
                 <button type="submit" class="btn bg-light text-dark">Sing Up</button>
               </div>



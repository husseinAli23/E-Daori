<ul class ="match-nav-bar" >
    <div class="border-bottom-nav"></div>

    <li><a href="/admin/index">Index</a></li>&nbsp
    <li><a href="/admin/add">Add New</a></li>&nbsp

    <div class="border-bottom-nav"></div>
  </ul>



<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <table class="table table-striped">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Question</th>
                                <th scope="col">Choose 1</th>
                                <th scope="col">Choose 2</th>
                                <th scope="col">Correct</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% question.forEach(element=> { %>
                                <tr>
                                    <th scope="row">
                                        <%= element.question %>
                                    </th>
                                    <td>
                                        <%= element.choose1 %>
                                    </td>
                                    <td>
                                        <%= element.choose2 %>
                                    </td>
                                    <td>
                                        <%= element.correct %>
                                    </td>


                                    <!-- edit btn -->
                                    <td><button style="background-color:transparent; outline: none; border:none;" onclick=" location.href = '/admin/edit?id=<%= element.id %>' "><img src="../../images/icons/edit.png">
                                        </button></td>
                                    <!-- detele btn -->
                                    <td>
                                        <form action="/admin/delete?id=<%= element.id %>" method="POST">
                                            <input  type="image" src="../../images/icons/del.png" class="form__input__submit">
                                        </form>
                                    </td>
                                </tr>

                                <% }) %>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</section>